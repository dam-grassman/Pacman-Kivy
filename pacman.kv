<Player>:
    Image:
		id: 'sacha'
		source: root.im
		pos: root.pos
        size: tx, ty

<Pokeball>:
    Image:
        source: root.ima
        pos: root.pos
        size: 20,20

<Photo>:
    Image:
		id: 'randri'
		source: root.ph
		pos: 4*tx + 3*1200/100, ty +36 + 2*400/100
        size: 2*tx, 2*ty

<Fantome>:
    Image:
		id: 'spectre'
		source: root.sp
		pos: root.pos
        size: tx, ty

<Points>:
    canvas:
        Rectangle
            pos: self.pos
            size: 5,5

<Wall>:
    canvas:
        Color:
            rgba: 0.24313725, 0.07058824, 0.92156863, 1
        Rectangle:
            pos: self.pos
            size: self.size

